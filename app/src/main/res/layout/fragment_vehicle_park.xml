<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VehicleParkFragment">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_back"
            android:layout_gravity="center"
            android:clickable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Parkir Kendaraan"
            android:textSize="30dp"
            android:fontFamily="@font/cabin"
            android:textColor="@color/coklat"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/name_fieldbar_wrap"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/name_fieldbar_wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_label">
                    <EditText
                        android:id="@+id/name_fieldbar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:background="@color/white2"
                        />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vehicle_type_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/vehicle_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kendaraan"
                    android:paddingBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/vehicle_type_fieldbar"/>
                <RadioGroup
                    android:id="@+id/vehicle_type_fieldbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:checkedButton="@id/motocycle"
                    android:gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vehicle_type_label"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <RadioButton
                                android:id="@+id/motocycle"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:button="@color/maroon"
                                android:drawableTint="@color/ivory"
                                android:background="@color/maroon"
                                android:paddingTop="8dp"
                                android:drawableTop="@drawable/two_wheeler_50dp_000000_fill0_wght400_grad0_opsz48"
                                />
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <RadioButton
                                android:id="@+id/car"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:button="@color/maroon"
                                android:background="@drawable/vehicle_type_selector"
                                android:paddingTop="8dp"
                                android:drawableTop="@drawable/airport_shuttle_50dp_000000_fill0_wght400_grad0_opsz48"/>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nopol_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/nopol_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Polisi"
                    android:paddingBottom="7dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/nopol_fieldbar"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nopol_fieldbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/nopol_label">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nopol_front_fieldbar_wrap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                        <EditText
                            android:id="@+id/nopol_front_fieldbar"
                            android:inputType="text"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:textAlignment="center"
                            android:background="@color/white2"
                            />
                    </com.google.android.material.card.MaterialCardView>
                    <ImageView
                        android:id="@+id/nopol_gap_1"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@id/nopol_front_fieldbar_wrap"
                        app:layout_constraintEnd_toStartOf="@id/nopol_middle_fieldbar_wrap"
                        android:src="@drawable/horizontal_rule_50dp_d9d9d9_fill0_wght400_grad0_opsz48"/>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nopol_middle_fieldbar_wrap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/nopol_gap_1"
                        app:layout_constraintEnd_toStartOf="@id/nopol_gap_2">
                        <EditText
                            android:id="@+id/nopol_middle_fieldbar"
                            android:inputType="number"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:background="@color/white2"
                            android:textAlignment="center"
                            />
                    </com.google.android.material.card.MaterialCardView>
                    <ImageView
                        android:id="@+id/nopol_gap_2"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@id/nopol_middle_fieldbar_wrap"
                        app:layout_constraintEnd_toStartOf="@id/nopol_back_fieldbar_wrap"
                        android:src="@drawable/horizontal_rule_50dp_d9d9d9_fill0_wght400_grad0_opsz48"/>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nopol_back_fieldbar_wrap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/nopol_gap_2">
                        <EditText
                            android:id="@+id/nopol_back_fieldbar"
                            android:inputType="text"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:background="@color/white2"
                            android:textAlignment="center"
                           />
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/datetime_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/date_field"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Masuk"
                        android:paddingBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/date_fieldbar"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/date_fieldbar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cornerRadius="10dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        android:paddingStart="5dp"
                        android:paddingTop="8dp"
                        android:backgroundTint="@color/white2"
                        android:textColor="@color/black"
                        android:text="15/07/2025"
                        android:gravity="start"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/date_label"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/time_field"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam"
                        android:paddingBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/time_fieldbar_wrap"/>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/time_fieldbar_wrap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/time_label"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <Spinner
                            android:id="@+id/time_fieldbar"
                            android:inputType="time"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:background="@color/white2"
                            />
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bedroom_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/bedroom_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:text="Nomor Kamar"
                    app:layout_constraintBottom_toTopOf="@id/bedroom_fieldbar_wrap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bedroom_fieldbar_wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bedroom_label">
                    <Spinner
                        android:id="@+id/bedroom_fieldbar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white2"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/acceptence_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Persetujuan persyaratan"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirm_btn"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    app:cornerRadius="8dp"
                    android:padding="-3dp"
                    android:text="Daftar"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:backgroundTint="@color/maroon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>