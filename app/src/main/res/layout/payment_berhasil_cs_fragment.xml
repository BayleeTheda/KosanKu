<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4F1">

    <!-- HEADER: Tetap di atas -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FBF4F1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_back"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tagihan Cleaning Service"
            android:textSize="24sp"
            android:fontFamily="@font/cabin"
            android:textStyle="bold"
            android:textColor="@color/coklat"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ScrollView untuk konten -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER: Detail Penyewaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Detail Cleaning Service"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- CARD Detail Penyewaan -->
            <!-- CARD Detail Penyewaan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text="Cleaning Service"
                            android:textSize="20dp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="Rp 150.000"
                            android:textSize="17dp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- No Kamar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text="No Kamar"
                            android:textSize="20dp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="A312"
                            android:textSize="17dp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text="12 Agustus 1945"
                            android:textColor="#828282" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="17.00 - 19.00 WIB"
                            android:textColor="#828282"
                            android:textSize="13dp"/>
                    </LinearLayout>


                    <!-- Detail Tagihan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <!-- Garis Pemisah -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#888"
                            android:layout_marginBottom="8dp" />

                        <!-- Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Total"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 150.000"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="#53141D" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- HEADER: Metode Pembayaran -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Metode Pembayaran"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- CARD Metode Pembayaran -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Gopay"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Ovo"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Dana"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Virtual Account BCA"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes : Cleaning Service akan diproses setelah pembayaran!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/cabin"
                android:layout_marginBottom="16dp" />

            <!-- Tombol Bayar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Bayar"
                android:background="@drawable/button_style"
                android:textColor="#FFFFFF"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/cabin"/>

        </LinearLayout>
    </ScrollView>


    <!-- ================= POPUP PEMBAYARAN BERHASIL ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_white"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/close"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/berhasil"
            android:tint="#81C784"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran berhasil"
            android:textColor="#7B1F23"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/cabin"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:text="Selamat pembayaran Anda berhasil"
            android:textColor="#7B1F23"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
