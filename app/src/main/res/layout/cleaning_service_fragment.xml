<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBF4F1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemesan Cleaning Service"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Spinner Nomor Kamar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Kamar"
                android:textSize="16sp"
                android:textColor="#000000" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_box">

                <Spinner
                    android:id="@+id/spinner_nomor_kamar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="12dp"
                    android:paddingEnd="36dp"
                    android:popupBackground="#FBF4F1"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTheme"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/spinner_arrow_kamar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:tint="#000000" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Nama -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/input_nama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_box"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="12dp"
                android:hint="Masukkan nama"
                android:textColor="#000000"
                android:textColorHint="#6F6F6F" />

            <!-- No HP -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Handphone / WA"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/input_wa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_box"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="12dp"
                android:hint="08xxxxxxxxxx"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#6F6F6F" />

            <!-- Label Tanggal Pembersihan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pembersihan          Jam"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Tanggal & Jam sejajar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="32dp">

                <!-- Kolom Tanggal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_box"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/date_fieldbar"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Pilih tanggal"
                            android:textColorHint="#6F6F6F"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/calender"
                            android:tint="#000000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Kolom Jam -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_spinner">

                        <Spinner
                            android:id="@+id/spinner_jam"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="36dp"
                            android:popupBackground="#FBF4F1"
                            android:dropDownVerticalOffset="4dp"
                            android:spinnerMode="dropdown"
                            android:theme="@style/SpinnerTheme"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:id="@+id/spinner_arrow_jam"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:tint="#000000" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Tombol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="150dp"
                android:gravity="end"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_cancel_style"
                    android:text="Batal"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_style"
                    android:text="Pilih Pembayaran"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
