<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4F1">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FBF4F1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_back"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tagihan Kos"
            android:textSize="24sp"
            android:fontFamily="@font/cabin"
            android:textStyle="bold"
            android:textColor="@color/coklat"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ScrollView untuk konten -->
    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER: Detail Penyewaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Detail Penyewaan"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- CARD Detail Penyewaan -->
            <!-- CARD Detail Penyewaan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text="Nama"
                            android:textSize="20dp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="Fikri Gam"
                            android:textSize="15dp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- No Kamar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/cabin"
                            android:text="No Kamar"
                            android:textSize="20dp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cabin"
                            android:text="A312"
                            android:textSize="15dp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- Total Tagihan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tagihan Sewa :"
                        android:textStyle="bold"
                        android:fontFamily="@font/cabin"
                        android:layout_marginBottom="8dp"
                        android:textSize="20dp"
                        android:textColor="#53141D" />

                    <!-- Detail Tagihan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Wifi -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Wifi"
                                android:layout_marginLeft="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 50.000,00"
                                android:textColor="#53141D" />
                        </LinearLayout>

                        <!-- Keamanan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Keamanan"
                                android:layout_marginLeft="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 50.000,00"
                                android:textColor="#53141D" />
                        </LinearLayout>

                        <!-- Kebersihan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Kebersihan"
                                android:layout_marginLeft="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 50.000,00"
                                android:textColor="#53141D" />
                        </LinearLayout>

                        <!-- Biaya Layanan -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Biaya Layanan"
                                android:layout_marginLeft="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 50.000,00"
                                android:textColor="#53141D" />
                        </LinearLayout>

                        <!-- Garis Pemisah -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#888"
                            android:layout_marginBottom="8dp" />

                        <!-- Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/cabin"
                                android:text="Total"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="#53141D" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cabin"
                                android:text="Rp 150.000"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="#53141D" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- HEADER: Metode Pembayaran -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Metode Pembayaran"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- CARD Metode Pembayaran -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Gopay"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Ovo"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Dana"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                    <CheckBox
                        android:layout_width="320dp"
                        android:layout_height="34dp"
                        android:fontFamily="@font/cabin"
                        android:text="Virtual Account BCA"
                        android:textColor="#53141D"
                        android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tombol Bayar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Bayar"
                android:background="@drawable/button_style"
                android:textColor="#FFFFFF"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/cabin"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
