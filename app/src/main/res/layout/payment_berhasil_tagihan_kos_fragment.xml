<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF4F1"
    tools:context=".TagihanKosActivity">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_back"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tagihan Kos"
            android:textSize="24sp"
            android:fontFamily="@font/cabin"
            android:textStyle="bold"
            android:textColor="#53141D"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ================= ISI KONTEN SCROLLABLE ================= -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Detail Penyewaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Detail Penyewaan"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- Card Detail Penyewaan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama"
                            android:fontFamily="@font/cabin"
                            android:textSize="16sp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fikri Gam"
                            android:fontFamily="@font/cabin"
                            android:textSize="16sp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- No Kamar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No Kamar"
                            android:fontFamily="@font/cabin"
                            android:textSize="16sp"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A312"
                            android:fontFamily="@font/cabin"
                            android:textSize="16sp"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- Total Tagihan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tagihan Sewa :"
                        android:textStyle="bold"
                        android:fontFamily="@font/cabin"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:textColor="#53141D" />

                    <!-- List Biaya -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wifi   Rp.50.000,00"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keamanan   Rp.50.000,00"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebersihan   Rp.50.000,00"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biaya Layanan   Rp.50.000,00"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />
                    </LinearLayout>

                    <!-- Garis -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#888" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 150.000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:fontFamily="@font/cabin"
                            android:textColor="#53141D" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- HEADER: Metode Pembayaran -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded"
                android:padding="8dp"
                android:text="Metode Pembayaran"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin" />

            <!-- Card Metode Pembayaran -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gopay"
                        android:textColor="#53141D"
                        android:textSize="16sp"
                        android:fontFamily="@font/cabin" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ovo"
                        android:textColor="#53141D"
                        android:textSize="16sp"
                        android:fontFamily="@font/cabin" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dana"
                        android:textColor="#53141D"
                        android:textSize="16sp"
                        android:fontFamily="@font/cabin" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes : Laundry kamu akan di proses setelah kamu membayar!"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:fontFamily="@font/cabin"
                android:layout_marginBottom="16dp" />

            <!-- Tombol Bayar -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Bayar"
                android:background="@drawable/button_style"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/cabin" />
        </LinearLayout>
    </ScrollView>

    <!-- ================= POPUP PEMBAYARAN BERHASIL ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_white"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@null"
            android:src="@drawable/close"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/berhasil"
            android:tint="#81C784"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran berhasil"
            android:textColor="#7B1F23"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/cabin"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:text="Selamat pembayaran Anda berhasil"
            android:textColor="#7B1F23"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
